@page
@model VisualAcademy.Pages.AppointmentsTypes.IndexModel
@{
    ViewData["Title"] = "Appointment Types";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AppointmentTypes[0].AppointmentTypeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AppointmentTypes[0].IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AppointmentTypes[0].DateCreated)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.AppointmentTypes)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AppointmentTypeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateCreated)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
